<%- include('../components/_header.ejs') %>
<div class="container mt-5">
    <h1>information List</h1>
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th>ID</th>
                <th>カテゴリ</th>
                <th>タイトル</th>
                <th>公開ステータス</th>
                <th>緊急フラグ</th>
                <th>登録日</th>
                <th>編集</th>
            </tr>
        </thead>
        <% for (const item in list) { %>
            <tr>
                <% let obj = list[item] %> 
                <td><%= obj.id %></td>
                <td><%= obj.group_id %></td>
                <td><%= obj.title %></td>
                <td><%= obj.status === 1 ? '公開済み' : '非公開' %></td>
                <td <% if (obj.emergency_flag === 1) { %> class="alert alert-danger" <% } %>    
                ><%= obj.emergency_flag === 1 ? '緊急':'' %>
                </td>
                <td><%= obj.createdAt %></td>
                <td>
                    <a href="/information/edit/?id=<%= obj.id %>">
                        <button class="btn btn-primary">編集する</button>
                    </a>
                </td>
            </tr>
        <% } %>
    </table>
</div>
<%- include('../components/_footer.ejs') %>
<%- include('../components/_header.ejs') %>
<div class="container w-75 p-3 mt-4">
    <h1 class="mb-5"><%= metaData.h1 %> </h1>
    <form action="" method="post">
        <input type="hidden" name="id" value="<%= post.id %>">
        <div class="custom-control custom-checkbox mb-3">
            <input 
                type="checkbox" 
                name="emergency" 
                class="custom-control-input" 
                id="customCheck1" 
                <% if(post.emergency_flag === 1){ %> checked <% } %>
            />
            <label class="custom-control-label" for="customCheck1">緊急フラグ</label>
        </div>
        <div class="form-group">
            <label for="title">タイトル</label>
            <input 
                name="title" 
                type="text" 
                class="form-control" 
                id="title" 
                placeholder="" 
                value="<%= post.title %>"
            />
        </div>
        <div class="form-group">
            <p class="mb-2">カテゴリ</p>
            <select class="custom-select" name="group">
                <option <% if(post.group_id === ''){ %> selected <% } %>>カテゴリを選択してください</option>
                <option value="1" <% if(post.group_id === 1){ %> selected <% } %> >リリース</option>
                <option value="2" <% if(post.group_id === 2){ %> selected <% } %> >イベント</option>
                <option value="3" <% if(post.group_id === 3){ %> selected <% } %> >社内</option>
            </select>
        </div>
        <div class="form-group">
            <label for="content">お知らせ内容</label>
            <textarea 
                name="content" 
                class="form-control" 
                rows="10" 
                id="content" 
                placeholder="マークダウン形式でご入力ください"
            ><%= post.content %></textarea>
        </div>

        <div class="mb-5">
            <p class="mb-1">公開ステータス</p>
            <div class="custom-control custom-radio">
                <input 
                    type="radio" 
                    id="customRadio1" 
                    name="status" 
                    class="custom-control-input" 
                    value="1" 
                    <% if(post.status === 1){ %> checked <% } %> 
                />
                <label class="custom-control-label" for="customRadio1">公開</label>
            </div>
            <div class="custom-control custom-radio">
                <input 
                    type="radio" 
                    id="customRadio2" 
                    name="status" 
                    value="2" 
                    class="custom-control-input"
                    <% if(post.status === 2){ %> checked <% } %> 
                />
                <label class="custom-control-label" for="customRadio2">非公開</label>
            </div>
        </div>
        
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">内容を登録する</button>
        </div>
    </form>
</div>

<%- include('../components/_footer.ejs') %>
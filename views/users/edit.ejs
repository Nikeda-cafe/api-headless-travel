<%- include('../components/_header.ejs') %>
<div class="container w-50 p-3 mt-4">
    <h1 class="mb-5"><%= metaData.h1 %> </h1>
    <div class="card">
        <div class="card-header">ご入力ください</div>
        <div class="card-body">
            <form action="" method="post">
                <input type="hidden" name="id" value="<%= post.id %>">
                <div class="form-group">
                    <label for="name">ユーザー名</label>
                    <input 
                        name="name" 
                        type="text" 
                        class="form-control" 
                        id="title" 
                        placeholder="" 
                        required
                        value="<%= post.name %>"
                    />
                </div>
                <div class="form-group">
                    <label for="email">メールアドレス</label>
                    <input 
                        name="email" 
                        type="email" 
                        class="form-control" 
                        id="title" 
                        placeholder="" 
                        required
                        value="<%= post.email %>"
                    />
                </div>
                <div class="form-group">
                    <label for="pass">パスワード</label>
                    <input 
                        name="pass" 
                        type="password" 
                        class="form-control" 
                        id="title" 
                        placeholder="" 
                        required
                        value="<%= post.pass %>"
                    />
                </div>
                
                
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">内容を登録する</button>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('../components/_footer.ejs') %>